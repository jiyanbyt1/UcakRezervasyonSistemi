
@{
    ViewBag.Title = "HesapOlustur";
    Layout = "~/Views/Shared/Layout_Anasayfa.cshtml";
}

<section class="contact-form">
    <div class="container">
        <div class="row">
            <div class="col-md-11">
                <div class="section-heading">
                    <p style="color:white" class="col-lg-12"><u>PACIFIC</u></p>
                    <h2>KAYIT FORMU</h2>

                </div>
            </div>
            <div class="col-md-5 col-md-offset-3">
                <form id="contact" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">ADINIZI GİRİNİZ</p>
                                <input name="ad" type="text" class="form-control" id="ad" placeholder="Adınız..." required>
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">SOYADINIZI GİRİNİZ</p>
                                <input name="soyad" type="text" class="form-control" id="soyad" placeholder="Soyadınız..." required>
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">ADRESİNİZİ GİRİNİZ</p>
                                <input name="adres" type="text" class="form-control" id="adres" placeholder="Adresiniz..." required>
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">TELEFON NUMARANIZI GİRİNİZ</p>
                                <input name="tel" type="text" class="form-control" id="tel" placeholder="Telefon..." required>
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">EPOSTA GİRİNİZ</p>
                                <input name="eposta" type="text" class="form-control" id="eposta" placeholder="Epostanız..." required>
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <fieldset>
                                <p class="text-danger">ŞİFRE BELİRLEYİNİZ</p>
                                <input name="sifre" type="password" class="form-control" id="sifre" placeholder="Şifreniz..." required>
                            </fieldset>
                        </div>

                        <div class="col-md-12">
                            <fieldset>
                                <button type="button" id="btnhesapac" class="btn btn-success">KAYDI TAMAMLA</button>
                            </fieldset>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnhesapac").click(function () {
            var ad = $("#ad").val();
            var soyad = $("#soyad").val();
            var adres = $("#adres").val();
            var tel = $("#tel").val();
            var eposta = $("#eposta").val();
            var sifre = $("#sifre").val();

            if (ad == "" || soyad == "" || adres == "" || tel == "" || eposta == "" || sifre == "") {
                alert("Lütfen Girilmesi Gereken Bilgileri Eksiksiz Giriniz...");
            }
            else {

                $.ajax({
                    type: 'POST',
                    url: '/Home/HesapAc',
                    dataType: 'json',
                    data: $('form').serialize(),
                    success: function (cevap) {
                        $('#ad').val("");
                        $('#soyad').val("");
                        $('#adres').val("");
                        $('#tel').val("");
                        $('#eposta').val("");
                        $('#sifre').val("");

                        $(location).prop('href', '/Home/Giris')
                    }
                });
            }
        });
    });
</script>


